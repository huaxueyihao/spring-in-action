	<!-- byType装配 -->
	<bean class="com.springinaction.springidol.Saxophone"></bean>
	<bean class="com.springinaction.springidol.Guitar"></bean>
	<bean id="kenny" 
		class="com.springinaction.springidol.Instrumentalist"
		autowire="byType">
		<property name="song" value="演员——薛之谦"></property>	
	</bean>
	
	
