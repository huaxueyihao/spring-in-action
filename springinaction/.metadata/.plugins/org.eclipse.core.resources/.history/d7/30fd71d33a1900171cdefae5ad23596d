package com.springinaction.dao;

import com.springinaction.model.User;

/**
 * 
 * @ClassName: UserDao 
 * @Description: 用户dao的接口
 * @author mao
 * @date 2017年3月29日 下午11:58:50 
 *
 */
public interface IUserDao {
	
	/**
	 * 
	* @Title: addUser 
	* @Description:  增加一个用户
	* @param @param user    
	* @return void    
	* @throws
	 */
	public void addUser(User user) throws Exception;
	
	public void deleteOneUser(int id) throws Exception;
	
	public void selectAllUsers() throws Exception;
	
}
